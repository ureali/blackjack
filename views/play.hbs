        </div>
        <div class="button-container">
            <button id="insurance" disabled="disabled" type="button" autocomplete="off"></button>
            <label for="insurance">Insurance</label>
        </div>
        <div class="button-container">
            <button id="split" disabled="disabled" type="button" autocomplete="off"></button>
            <label for="split">Split</label>
        </div>
    </fieldset>
</form>
</section>
